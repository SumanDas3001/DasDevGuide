<% if flash[:alert] %>
	<%= js add_gritter(flash[:alert], :title => "Suman Das Portfolio", :sticky => true ) %>
<% elsif flash[:error] %>
	<%= js add_gritter(flash[:error], :title => "Suman Das Portfolio", :sticky => true ) %>
<% else %>
	<%= js add_gritter(flash[:notice], :title => "Suman Das Portfolio", :sticky => true ) %>
<% end %>