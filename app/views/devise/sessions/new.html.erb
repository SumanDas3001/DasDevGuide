<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-sm-2"></div>
    <div class="col-sm-8 col-lg-8 col-md-8">
      <div class="login-page">
        <div class="login-box">
          <div class="card">
            <div class="card-header login-logo">
              <b>Welcome to DasDevGuide</b>
            </div>
            <div class="card-body login-card-body">    
              <%= link_to "Sign in with Github", omniauth_authorize_path(User, :github), class: "mt-4 btn btn-dark w-100", method: :post, data: { disable_with: "Connecting..." } %><br />
              <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "mt-4 btn btn-danger w-100", method: :post, data: { disable_with: "Connecting..." } %><br />

              <hr><h5 class="text-center">Have a password? Continue with your email address</h5>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login_form") do |f| %>
                <div class="form-group position-relative">
                  <%#= f.label :email %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter Email" %>
                </div>
                <div class="form-group">
                  <%#= f.label :password %><br />
                  <%= f.password_field :password, class: "form-control", id:"password-field", required: true, autofocus: true, autocomplete: "new-password", placeholder: "Enter Password" %>
                </div>

                <div class="form-group">
                  <%= f.submit "Log in", class:"mt-4 btn btn-primary w-100" %>
                </div>
              <% end %>
              <div class="auth-links">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-2 col-lg-2 col-md-2">
      
    </div>
  </div>
</div>