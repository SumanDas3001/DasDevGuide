<div class="col-sm-8 blog-main">
  <%= form_tag blogs_path, :method => 'get' do %>
    <div>
      <div class="input-group-append">
        <%= text_field_tag :search, params[:search], class:"form-control", placeholder: "Search blog by title" %>
        <%= submit_tag "Search", :name => nil, class:"btn btn-outline-secondary" %>
      </div>
    </div><br>
  <% end %>


 	<%#= paginate @blogs, :page_links => false %>
  <%#= will_paginate @blogs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <%= render @blogs %>

  <nav class="blog-pagination">
  <%= will_paginate @blogs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  	<%#= paginate @blogs, :page_links => false %>
  </nav>
</div>

